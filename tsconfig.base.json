{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "types": [],
    "paths": {
      "@nura-js/core": ["packages/core/src/index.ts"],
      "@nura-js/client": ["packages/client/src/index.ts"],
      "@nura-js/client/*": ["packages/client/src/*"],
      "@nura-js/plugin-voice": ["packages/plugin-voice/src/index.ts"],
      "@nura-js/create-nura": ["packages/create-nura/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage"]
}
