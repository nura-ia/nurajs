{
  "name": "@nura-js/core",
  "version": "0.1.0",
  "description": "Core primitives to connect AI agents with human-first interfaces.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "clean": "rimraf dist",
    "lint": "eslint 'src/**/*.ts'",
    "test": "vitest run",
    "typecheck": "tsc --project tsconfig.json --noEmit"
  },
  "keywords": [
    "nura",
    "intent",
    "ai",
    "sdk"
  ],
  "engines": {
    "node": ">=18.18"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@types/node": "^22"
  }
}
